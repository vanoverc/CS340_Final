<head>
    {{#each styleSheet}}
        <link rel="stylesheet" href="../public/css/{{this}}">
    {{/each}}
    <!--    
    <link rel="stylesheet" type="text/css" href="/public/owstyle.css">
	<link rel="stylesheet" type="text/css" href="/public/home-style.css"> -->
</head>

<div class="content">
    <h1>Player Profile - Team Kill</h1>
    <h2>{{player.p_id}} - {{player.p_tag}}</h2>

    <h2>Teams</h2>
    <table>
        {{#each team}}
        <tr>
            <td>{{t_name}}</td>
        </tr>
        {{/each}}
    </table>

    <h2>Matches</h3>
    <table>
        <thead>
            <tr>
                <th>Day</th>
                <th>Time</th>
                <th>Home Team</th>
                <th>Away Team</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            {{#each match}}
            <tr>
                <td>{{month}}/{{day}}/{{year}}</td>
                <td>{{time}}</td>
                <td>{{home}}</td>
                <td>{{away}}</td>
                <td>{{r_value}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>