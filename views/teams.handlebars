<head>
    {{#each styleSheet}}
        <link rel="stylesheet" href="./public/css/{{this}}">
    {{/each}}
    <!--    
    <link rel="stylesheet" type="text/css" href="/public/owstyle.css">
	<link rel="stylesheet" type="text/css" href="/public/home-style.css"> -->
</head>

<div class="content">
    <h1>Teams - Team Kill</h1>
    <form id="create-player" action="/teams" method="post">
        <fieldset>
            <legend>New Team</legend>
            <p>Team Name: <input type="text" name="t_name"/></p>
        </fieldset>
        <input type="submit" value="Create Team">
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Team Name</th>
            </tr>
        </thead>
        <tbody>
            {{#each team}}
            <tr>
                <td><a href="/team/{{t_id}}">{{t_id}}</a></td>
                <td><a href="/team/{{t_id}}">{{t_name}}</a></td>
                <td><a href="/removeTeam/{{t_id}}"><button>Delete</button></a></td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </table>
</div>