<head>
    {{#each styleSheet}}
        <link rel="stylesheet" href="../public/css/{{this}}">
    {{/each}}
    <!--    
    <link rel="stylesheet" type="text/css" href="/public/owstyle.css">
	<link rel="stylesheet" type="text/css" href="/public/home-style.css"> -->
</head>

<div class="content">
    <h1>Team Profile - Team Kill</h1>
    <h2>{{team.t_id}} - {{team.t_name}}</h2>

    <h2>Players</h2>
     <form id="add-player" action="/addPlayerTeam" method="post">
        <fieldset>
            <legend>Add Player</legend>
            <select name="player">        
                {{#each allPlayers}}
                <option value="{{p_id}}">{{p_tag}}</option>
                {{/each}}
            </select>
            <input type="hidden" name="t_id" value="{{team.t_id}}" />
        </fieldset>
        <input type="submit" value="Add Player">
    </form>
    <table>
        {{#each player}}
        <tr>
            <td>{{p_tag}}</td><td>{{p_name}}</td>
        </tr>
        {{/each}}
    </table>

    <h2>Matches</h3>
    <table>
        <thead>
            <tr>
                <th>Day</th>
                <th>Time</th>
                <th>Home Team</th>
                <th>Away Team</th>
                <th>Result</th>
            </tr>
        </thead>
        <tbody>
            {{#each match}}
            <tr>
                <td>{{month}}/{{day}}/{{year}}</td>
                <td>{{time}}</td>
                <td>{{home}}</td>
                <td>{{away}}</td>
                <td>{{r_value}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>